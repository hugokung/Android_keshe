<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.picturesharedemo1.Activity.PostDetail">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:contentInsetStart="12dp"
        android:background="#333333"
        android:theme="@style/toolbar"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        >

        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正文"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginStart="155dp"
            android:layout_marginLeft="155dp"
            />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/detail_user_head"
                    android:src="@drawable/head"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="155dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detail_user_id_name"
                        android:text="用户名"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/detail_post_time"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="155dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-5-14"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/detail_share_content"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="文本内容"
                android:textSize="15sp"
                />
            <ImageView
                android:id="@+id/detail_share_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/detail_user_like"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="155dp"
                    android:layout_toLeftOf="@id/detail_like_sum"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    />
                <TextView
                    android:id="@+id/detail_like_sum"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="155dp"
                    android:layout_alignBottom="@id/detail_user_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="0"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:layout_alignBottom="@id/detail_user_like"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="155dp"
                    android:layout_toLeftOf="@+id/detail_collection_sum"
                    android:id="@+id/detail_user_collection"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/collection"
                    />
                <TextView
                    android:id="@+id/detail_collection_sum"
                    android:layout_marginEnd="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_alignBottom="@id/detail_user_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="0"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>