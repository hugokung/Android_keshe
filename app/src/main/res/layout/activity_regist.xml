<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@drawable/sign"
            android:layout_marginLeft="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_person_outline_black_24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edit_lin"
            >

            <EditText
                android:id="@+id/register_edit_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:hint="  请输入账号"
                android:textSize="16dp"
                android:textColorHint="#494949"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textCursorDrawable="@drawable/edit_background"
                android:background="@drawable/edit"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:layout_marginBottom="4dp"

            android:src="@drawable/ic_lock_outline_black_24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edit_lin"

            >

            <EditText
                android:id="@+id/register_edit_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:hint="  请输入密码"
                android:textSize="15dp"
                android:textColorHint="#494949"
                android:inputType="numberPassword"
                android:imeOptions="actionNext"
                android:textCursorDrawable="@drawable/edit_background"
                android:background="@drawable/edit"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg_linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:layout_marginBottom="4dp"

            android:src="@drawable/ic_lock_outline_black_24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edit_lin"

            >

            <EditText
                android:id="@+id/register_edit_repassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:hint="再次输入密码"
                android:textSize="15dp"
                android:imeOptions="actionNext"
                android:textColorHint="#494949"
                android:textCursorDrawable="@drawable/edit_background"
                android:background="@drawable/edit"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="注册"
            android:textColor="@color/gray_bg"
            android:textSize="18sp" />

    </LinearLayout>




</LinearLayout>