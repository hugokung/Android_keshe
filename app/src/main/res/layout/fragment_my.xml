<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.picturesharedemo1.Fragment.FragmentMy"
    >
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snow"
            >
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingtoolbarlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/mediumaquamarine"
                app:expandedTitleMarginBottom="100dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >

                <RelativeLayout
                    android:id="@+id/reLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="我"
                        android:textSize="15sp"
                        />

                    <View
                        android:id="@+id/v_dividerFir"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/tv_title"
                        android:background="@color/grey" />
                    <TextView
                        android:id="@+id/logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="退出登录"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>

                    <RelativeLayout

                        android:id="@+id/my_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        >
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/drawee_img"
                            app:roundAsCircle="true"
                            app:roundingBorderWidth="1dp"
                            app:roundingBorderColor="@color/grey"
                            app:backgroundImage="@color/white"

                            app:roundedCornerRadius="20dp"
                            android:layout_width="90dp"
                            android:layout_height="90dp" />
                        <TextView
                            android:id="@+id/tv_nickname"
                            android:hint="昵称"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/drawee_img"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/tv_selfIntroduction"
                            android:hint="个人简介"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_nickname"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            />
                        <LinearLayout
                            android:id="@+id/lin_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="130dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_postnum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    />
                                <TextView
                                    android:id="@+id/tv_post"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginStart="20dp"
                                    android:text="发布" />
                            </LinearLayout>
                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_followeenum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginStart="40dp"
                                    />
                                <TextView
                                    android:id="@+id/tv_followee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="32dp"
                                    android:layout_marginStart="32dp"
                                    android:text="关注" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_followernum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginStart="40dp"
                                    />
                                <TextView
                                    android:id="@+id/tv_follower"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="32dp"
                                    android:layout_marginStart="32dp"
                                    android:text="粉丝" />
                            </LinearLayout>

                        </LinearLayout>
                        <Button
                            android:layout_below="@+id/lin_three"
                            android:id="@+id/bt_editMyinfo"
                            android:layout_width="210dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="130dp"
                            android:layout_marginTop="5dp"
                            android:text="编辑个人资料"
                            android:background="@drawable/btn_shape"
                            />
                    </RelativeLayout>

                    <View
                        android:id="@+id/v_dividerFir1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/my_info"
                        android:background="@color/grey"
                        />
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <com.google.android.material.tabs.TabLayout
                android:layout_below="@id/collapsingtoolbarlayout"
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabIndicatorColor="@color/mediumaquamarine"
                app:tabIndicatorHeight="20dp"
                app:tabMode="fixed"
                app:tabGravity="fill" />

        </com.google.android.material.appbar.AppBarLayout>
        <!-- va pp:tabTextColor="@color/colorPrimary"v -->
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_below="@id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>